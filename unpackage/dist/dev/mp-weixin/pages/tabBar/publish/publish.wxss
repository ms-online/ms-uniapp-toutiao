.publish-page {
  padding: 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow-y: auto;
}
.publish-page .edit {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #fff;
  padding-top: 20rpx;
}
.publish-page .edit textarea {
  width: 100%;
}
.publish-page .imgs-wrap {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  width: 100%;
}
.publish-page .imgs-wrap .file,
.publish-page .imgs-wrap .add-img {
  width: 32%;
  border: 1px solid #ccc;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-top: 20rpx;
  position: relative;
  height: 240rpx;
  margin-left: 5rpx;
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
}
.publish-page .imgs-wrap .file {
  position: relative;
}
.publish-page .imgs-wrap .file .del {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  background: #f56c6c;
  color: #fff;
  top: 0;
  text-align: center;
  right: 0;
  line-height: 35rpx;
  font-size: 30rpx;
  z-index: 100;
}
.publish-page .imgs-wrap .file image {
  width: 100%;
  height: 100%;
}
.publish-page .imgs-wrap .add-img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.publish-page .imgs-wrap .add-img .icon {
  font-size: 80rpx;
  color: #999;
}
.publish-page .edit-tools {
  position: fixed;
  z-index: 99;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 0.5px solid #ccc;
  height: 98rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.publish-page .edit-tools .location {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-right: 30rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: #f0f0f0;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  color: #666666;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 51rpx;
}
.publish-page .edit-tools .location .city {
  margin-left: 10rpx;
}
.publish-page .edit-tools .location .icon {
  color: #999;
}

